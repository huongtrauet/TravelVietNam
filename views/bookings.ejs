            <!-- INFO HOST -->
            <article class="container__center__host">
                <header>
                    <h1>{{ post.post.title }}</h1>
                    <p>{{ post.post.about }}</p>
                </header>
                <section>
                    <div class="container__center__host__avatar">
                        <img style="border-radius: 9999px;" width="100" height="100" ng-src="{{ hostPost.avatar }}"
